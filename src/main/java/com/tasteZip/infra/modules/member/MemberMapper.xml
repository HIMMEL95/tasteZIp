<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tasteZip.infra.modules.member.MemberMapper">

    <resultMap id="resultMapObj" type="com.tasteZip.infra.modules.member.Member"></resultMap>
    
    <sql id ="selectCommon">
		FROM member m
		WHERE 1=1
		<if test="shDelNy != null and !shDelNy.equals('')">AND ifmmDelNy = #{shDelNy}</if>
		<choose>
			<when test="shOption == 1">AND ifmmifmmSeq = #{shValue}</when>
			<when test="shOption == 2">AND ifmmifmmName LIKE CONCAT('%',#{shValue},'%')</when>
			<when test="shOption == 3">AND ifmmifmmId LIKE CONCAT('%',#{shValue},'%')</when>
		</choose>
	</sql>
	
	<select id="selectList" resultMap="resultMapObj">
		<include refid="Base.selectListUpperForMysql" />
			select 
				m.ifmmifmmSeq
				,m.ifmmifmmId
				,m.ifmmifmmName
				,m.ifmmifmmDob
				,m.ifmmifmmGender
				,m.ifmmifmmEmail
				,m.ifmmifmmPhone
				,m.ifmmifmmCreatedAt
			<include refid="selectCommon"></include>
			ORDER BY m.ifmmifmmCreatedAt DESC
			<include refid="Base.orderByLimitForMysql" />
		<include refid="Base.selectListLowerForMysql" />
	</select>
	
	<select id="selectOneCount" resultType="Integer">
		SELECT COUNT(*)
		<include refid="selectCommon" />
	</select>
	
</mapper>